    <script>
        function navigateTo(url) {
          // Evitar que el formulario se envíe cuando se hace clic en el enlace
          event.preventDefault();
      
          // Obtener la URL del enlace y redirigir a esa página
          window.location.href = url;
        }
      </script>
      



    <script>
      function validarFormulario() {



        const nombre = document.getElementById('nombre');
        const id = document.getElementById('id');
        const course = document.getElementById('course');
    
        // Eliminar espacios en blanco al inicio y al final de los campos
        nombre.value = nombre.value.trim();
        course.value = course.trim();
       
        // Escapar caracteres HTML (opcional)
        nombre.value = escape(nombre.value);
        course.value = escape(course.value);
        
        return true; // Retorna true para enviar el formulario o false para detenerlo
      }
    </script>



    
    
    
